<div class="row">
  <%= render 'layouts/sidebar' %>
  <div class="span8 <%= "offset2" unless user_signed_in? %>">
    <div class="boxes">
      <%= form_for @profile, :html => {:multipart => true,
                                       :class => "form-horizontal"} do |f| %>
        <% if @profile.errors.any? %>
          <div class="alert alert-error">
          <% @profile.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
          </div>
        <% end %>

        <fieldset>
          <legend>Basic Information</legend>
          <div class="control-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls"><%= f.text_field :name,
              :placeholder => "Bruce Wayne" %></div>
          </div>
          <div class="control-group">
            <%= f.label "Organization", :class => "control-label" %>
            <div class="controls"><%= f.text_field :entity,
              :placeholder => "Google" %></div>
          </div>
          <div class="control-group">
            <%= f.label "Organization's Website", :class => "control-label" %>
            <div class="controls"><%= f.text_field :org_website,
              :placeholder => "google.com" %></div>
          </div>
          <div class="control-group">
            <%= f.label "Professional Level", :class => "control-label" %>
            <div class="controls"><%= f.select :pro_level,
              ["Student", "Professional", "Entrepreneur"] %></div>
          </div>
          <div class="control-group">
            <%= f.label :profession, :class => "control-label" %>
            <div class="controls"><%= f.text_field :profession,
              :placeholder => "Wed Developer/Business Dev" %></div>
          </div>
          <div class="control-group">
            <%= f.label :need, :class => "control-label" %>
            <div class="controls"><%= f.text_field :need, 
              :placeholder => "Designer, iOS Developer" %></div>
          </div>
          <div class="control-group">
            <%= f.label :skills, :class => "control-label" %>
            <div class="controls"><%= f.text_area :skills, 
              :rows => "10",
              :placeholder => "Python, Marketing, Biz Dev" %></div>
          </div>
          <div class="control-group">
            <%= f.label "Need Advisors?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :need_advisors %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label "Need CoFounder?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :need_cofounder %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label "Need Temporary Help?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :need_temp %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label "Need Investors?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :need_investors %>
            </div>
          </div>
          <div class="control-group">
            <label for="profile_twitter" class="control-label">twitter.com/</label>
            <div class="controls"><%= f.text_field :twitter %></div>
          </div>
          <div class="control-group">
            <label for="profile_linkedin" class="control-label">linkedin.com/</label>
            <div class="controls"><%= f.text_field :linkedin %></div>
          </div>
          <div class="control-group">
            <label for="profile_facebook" class="control-label">facebook.com/</label>
            <div class="controls"><%= f.text_field :facebook %></div>
          </div>

          <div class="control-group">
            <%= f.label "Cellphone #", :class => "control-label" %>
            <div class="controls"><%= f.text_field :phone_number %></div>
          </div>
          <div class="control-group">
            <%= f.label "Display Phone Number?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :phone_display %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label "Display Email?", :class => "control-label" %>
            <div class="controls">
              <%= f.check_box :email_display %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.submit :class => "btn-success" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>

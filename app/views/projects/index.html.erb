<div class="row">
  <div class="span8">
    <div class="boxes">
      <legend><%= @title %></legend>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Project Champion</th>
            <th>Need</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= link_to project.title, project %></td>
              <td><%= project.profiles.first.name %></td>
              <td><%= project.need %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @projects %>
    </div>
  </div>
</div>
